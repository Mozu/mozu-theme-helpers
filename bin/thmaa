#!/usr/bin/env node

var color = require('colors'),
    argv = require('minimist')(process.argv.slice(2));
    
if (!argv._[0]) argv._[0] = 'help';

require('../thmaa')(argv._[0], {
  options: argv,
  _args: argv._.slice(1),
}, function(err) {
  if (err) {
    if (argv.debug) {
      throw err;
    } else {
      process.stderr.write((err.message || err.toString()).red + "\n");
      process.exit(err.code || 1);
    }
  }
});